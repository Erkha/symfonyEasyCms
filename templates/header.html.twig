<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
	<div class="container">
		<a class="navbar-brand js-scroll-trigger" href="#page-top">Anim'the Time</a>
		<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
			data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
			aria-label="Toggle navigation">
			Menu
			<i class="fas fa-bars"></i>
		</button>
		<div class="collapse navbar-collapse" id="navbarResponsive">
			<ul class="navbar-nav">
				{% for page in mainPages %}
				{% if page.childs is empty %}
				<li class="nav-item">
					<a class="nav-link" href="{{ path('main', {slug: page.slug}) }}">{{page.title}}
						<span class="sr-only">(current)</span>
					</a>
				</li>
				{% else %}
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" href="#" id="{{page.title}}" role="button"
						data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						{{page.title}}
					</a>
					<div class="dropdown-menu" aria-labelledby="{{page.title}}">
						{% for child in page.childs %}
						<a class="nav-link dropdown-item"
							href="{{ path('main', {slug: child.slug}) }}">{{child.title}}</a>
						{% endfor %}
					</div>
				</li>
				{% endif %}
				{% endfor %}
			</ul>
		</div>
	</div>
</nav>
